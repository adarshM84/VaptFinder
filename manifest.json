{
  "manifest_version": 3,
  "name": "VaptFinder: Vulnerability & Library Detector",
  "version": "1.0",
  "description": "Inspects websites for outdated libraries and checks browser vulnerability.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "detector.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}